      "type": "header",
      "content": "Demo Banner Settings"
    },
    {
      "type": "image_picker",
      "id": "demo_image",
      "label": "Demo Banner Image"
    },
    {
      "type": "text",
      "id": "demo_heading",
      "label": "Demo Banner Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "richtext",
      "id": "demo_text",
      "label": "Demo Banner Text",
